{
    "manifest_version": 2,
    "name": "Borderify",
    "version": "1.0",

    "description": "Addsa  red border to all webpages matchinc mozilla.org.",

    "icons": {
        "48": "icons/border-48.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*.mozilla.org/*"],
            "js": ["borderify.js"]
        }
    ]
}